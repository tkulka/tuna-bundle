{% trans_default_domain 'tuna_admin' %}
{% extends "TheCodeineAdminBundle::_base_layout.html.twig" %}
{% block body_class %}login-page{% endblock %}

{% block mainContainer %}
    <div class="content">
        <div class="col-md-4 col-md-offset-4">
            <div class="login">
                <h2 class="text-center">{{ 'security.header'|trans }}</h2>

                {% if error %}
                    <div class="dialog dialog-inverse">
                        <strong class="text-danger">{{ 'ui.form.error'|trans }}</strong> {{ error.message|trans }}
                    </div>
                {% endif %}

                <div class="login-form">
                    <form action="{{ path('fos_user_security_check') }}" method="post" role="form" novalidate>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <div class="form-group">
                            <div class="input-append">
                                <input
                                    type="text"
                                    name="_username"
                                    class="form-control login-field"
                                    value="{{ last_username }}"
                                    placeholder="{{ 'security.login.name'|trans }}"
                                    id="login-name"
                                />
                                <label class="login-field-icon fui-user" for="login-name"></label>
                            </div>
                        </div>

                        <div class="form-group">
                            <input
                                type="password"
                                name="_password"
                                class="form-control login-field"
                                placeholder="{{ 'security.password.name'|trans }}"
                                id="login-pass"
                            />
                            <label class="login-field-icon fui-lock" for="login-pass"></label>
                        </div>

                        <label class="checkbox" for="remember_me">
                            <input
                                type="checkbox"
                                id="remember_me"
                                name="_remember_me"
                                value="on"
                                data-toggle="checkbox"
                            />
                            {{ 'security.remember'|trans }}
                        </label>

                        <input
                            type="submit"
                            id="_submit"
                            name="_submit"
                            value="{{ 'security.login.button'|trans }}"
                            class="btn btn-primary btn-lg btn-block"
                        />
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock mainContainer %}

{% trans_default_domain 'tuna_admin' %}
{% embed 'TheCodeineAdminBundle::_base/list.html.twig' %}
    {% trans_default_domain 'tuna_admin' %}

    {% block content %}
        <div class="row admin-container edit-menu-tree" data-save-order-url="{{ path('tuna_menu_saveorder') }}">
            <div class="col-sm-12">
                <div class="admin-list">
                    {% for menu in menus %}
                        <div class="sortable-wrapper">
                            <div class="action-buttons">
                                <a href="{{ path('tuna_menu_create', { parentId: menu.id }) }}" class="btn btn-primary btn-wide">
                                    <i class="fui-plus"></i> {{ 'list.add'|transchoice(1) }}
                                </a>
                                <a href="#" data-action="save-order" class="btn btn-primary btn-wide inactive">
                                    <i class="fa fa-save" aria-hidden="true"></i> {{ 'list.save'|trans }}
                                </a>
                            </div>
                            <ul data-menu-tree>
                                {% include 'TheCodeineAdminBundle:Menu:menu_item.html.twig' with { item: menu } %}
                            </ul>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endblock %}
{% endembed %}

{% trans_default_domain 'tuna_admin' %}
{% extends 'TunaCMSAdminBundle::layout.html.twig' %}

{% block content %}
    {% embed 'TunaCMSAdminBundle:_partials/form:edit.html.twig' %}
        {% trans_default_domain 'tuna_admin' %}

        {% block header_checkboxes %}
            {% include '@TunaCMSAdmin/menu/partials/header_checkboxes.html.twig' %}
        {% endblock %}

        {% block options %}
            {{ form_row(form.name) }}
            {{ form_row(form.label) }}
            {% include '@TunaCMSAdmin/node/partials/metadata_accordion.html.twig' with { metadata: form.node.metadata } %}
        {% endblock %}
    {% endembed %}
{% endblock %}
